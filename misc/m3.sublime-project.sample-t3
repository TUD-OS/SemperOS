{
    "folders":
    [
        {
            "path": "/your/path/to/the/m3/repo",
            "file_exclude_patterns": ["*.log"],
            "folder_exclude_patterns": ["hw/gem5"]
        }
    ],
    "settings":
    {
        "sublimeclang_additional_language_options":
        {
            "c++" : ["-std=c++11"],
            "c" : ["-std=c99"]
        },
        "sublimeclang_options":
        [
            "-D__t3__",
            "-I/your/path/to/buildroot/host/usr/xtensa-buildroot-linux-uclibc/sysroot/usr/include/",
            "-I/your/path/to/buildroot/host/usr/xtensa-buildroot-linux-uclibc/include/c++/4.8.4/",
            "-I/your/path/to/buildroot/host/usr/xtensa-buildroot-linux-uclibc/include/c++/4.8.4/xtensa-buildroot-linux-uclibc/",
            "-I/your/path/to/the/m3/repo/src/include",
            "-I/your/path/to/the/m3/repo/hw/th/xtensa_configs/Pe_4MB_128k_4irq/xtensa-elf/include/",
            "-I/your/path/to/the/m3/repo/hw/th/xtensa_configs/Pe_4MB_128k_4irq/xtensa-elf/arch/include/",
            "-nostdinc",
            "-nostdinc++",
            "-Wsign-compare",
            "-Wunused-parameter",
            "-Wunused-result",
            "-Wunused-variable",
            "-ferror-limit=0",
            "-m32"
        ]
    }
}
